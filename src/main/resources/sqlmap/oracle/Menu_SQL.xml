  <select id="existMembers" parameterType="hashmap" resultType="int">
    SELECT COUNT(*) AS CNT
      FROM MEMBERS
     WHERE ID = #{id}
  </select>
    
    <insert id="insertMemberInfo">
      INSERT INTO MEMBERS ( ID
                          , PASSWORD
                          , JOIN_DATE
                          , AUTH_GRP_CD )
                   VALUES ( #{id}
                          , #{password}
                          , NOW()
